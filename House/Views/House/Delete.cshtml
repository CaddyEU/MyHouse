@model House.Models.HouseViewModel

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>House</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <input type="hidden" asp-for="Id" class="col-sm-2 col-form-label" />

        </div>
        <div class="form-group row">
            <label asp-for="OwnerName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.OwnerName)
        </div>
        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Address)
        </div>
        <div class="form-group row">
            <label asp-for="SquareMeters" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.SquareMeters)
        </div>
        <div class="form-group row">
            <label asp-for="YearOfBuild" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.YearOfBuild)
        </div>
        <div class="form-group row">
            <label asp-for="NumberOfRooms" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.NumberOfRooms)
        </div>
        <div class="form-group row">
            <label asp-for="NumberOfFloors" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.NumberOfFloors)
        </div>
        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Price)
        </div>
    </dl>

    <form asp-action="DeleteConfirmation" asp-route-id="@Model.Id">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back To List</a>
    </form>
</div>